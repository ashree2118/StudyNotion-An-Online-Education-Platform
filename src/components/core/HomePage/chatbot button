<button class="chatbotbutton"> Chatbot </button>
<script>
    function recipe() {
        let name = prompt("What is your name?");
        let email = prompt("What is your email address?");
        alert(
            "Thank you, " +
            name +
            " ! We will connect you to the chatbot shortly!!"

        );

  
    }

    let chatbotButton = document.querySelector(" button");
    chatbotButton.addEventListener("click", recipe);
</script>
